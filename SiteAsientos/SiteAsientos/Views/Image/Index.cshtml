@model IEnumerable<SiteAsientos.Models.Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image_Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Image_Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design.Design_Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Image_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Image_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Image_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
