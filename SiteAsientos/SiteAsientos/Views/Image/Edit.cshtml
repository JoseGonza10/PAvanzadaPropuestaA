@model SiteAsientos.Models.Image

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Edit</h1>

<h4>Image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Image_Id" />
            <div class="form-group">
                <label asp-for="Image_Content" class="control-label"></label>
                <input asp-for="Image_Content" class="form-control" />
                <span asp-validation-for="Image_Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image_DesignId" class="control-label"></label>
                <select asp-for="Image_DesignId" class="form-control" asp-items="ViewBag.Image_DesignId"></select>
                <span asp-validation-for="Image_DesignId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
