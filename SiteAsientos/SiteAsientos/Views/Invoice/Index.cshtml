@model IEnumerable<SiteAsientos.Models.Invoice>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Order_Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Invoice_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Invoice_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Invoice_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
