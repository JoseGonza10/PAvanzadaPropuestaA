@model SiteAsientos.Models.Supplier

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var HeaderTitle = "Crear Proveedor";
    ViewBag.ViewName = "Gestión de Proveedores";
    ViewBag.SelectedView = "Supplier";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">@HeaderTitle</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="row">
                    <div class="col-md-6 w-75 m-2">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-control">
                                <label asp-for="Supplier_Name"></label>
                                <input asp-for="Supplier_Name" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Supplier_Name" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Supplier_Address"></label>
                                <input asp-for="Supplier_Address" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Supplier_Address" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Supplier_Phone"></label>
                                <input asp-for="Supplier_Phone" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Supplier_Phone" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Supplier_Email"></label>
                                <input asp-for="Supplier_Email" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Supplier_Email" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Supplier_Status" /> @Html.DisplayNameFor(model => model.Supplier_Status)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-primary">Volver</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}