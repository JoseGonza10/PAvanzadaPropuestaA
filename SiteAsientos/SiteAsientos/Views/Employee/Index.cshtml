<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">@HeaderTitle</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                    <div class="input-group input-group-outline w-15 m-2">
                        <label class="form-label">Buscar</label>
                        <input id="txtSearch" type="text" class="form-control">
                    </div>
                    <div class="pt-3">
                        <a asp-action="Create" class="btn btn-primary">Agregar</a>
                    </div>
                </div>
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Employee_Name)</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Html.DisplayNameFor(model => model.Employee_Password)</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-3">@Html.DisplayNameFor(model => model.Employee_Email)</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-3">@Html.DisplayNameFor(model => model.Employee_Phone)</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-4">@Html.DisplayNameFor(model => model.Employee_Type)</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Employee_Status)</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            @switch (item.Employee_Type)
                                            {
                                                case "Empleado":
                                                    <div>
                                                        <img src="~/img/project-img/img-user.png" class="avatar avatar-sm me-3 border-radius-lg" alt="user1"> <!--Icon made by Freepik from www.flaticon.com-->
                                                    </div>
                                                    break;
                                                case "Administrador":
                                                    <div>
                                                        <img src="~/img/project-img/img-admin.png" class="avatar avatar-sm me-3 border-radius-lg" alt="user1"> <!--Icon made by Freepik from www.flaticon.com-->
                                                    </div>
                                                    break;
                                            }
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.Employee_Name) @Html.DisplayFor(modelItem => item.Employee_MiddleName) @Html.DisplayFor(modelItem => item.Employee_LastName)</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.Employee_Password)</span>
                                    </td>
                                    <td>
                                        <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.Employee_Email)</span>
                                    </td>
                                    <td>
                                        <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.Employee_Phone)</span>
                                    </td>
                                    <td>
                                        <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.Employee_Type)</span>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        @if (item.Employee_Status == true)
                                        {
                                            <span class="badge badge-sm bg-gradient-success">Habilitado</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-sm bg-gradient-secondary">Deshabilitado</span>
                                        }

                                    </td>
                                    <td class="align-middle">
                                        <a asp-action="Edit" asp-route-id="@item.Employee_Id" Edit class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                            Editar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

