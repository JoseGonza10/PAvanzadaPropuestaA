@model SiteAsientos.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var HeaderTitle = "Empleados";
    string[] Roles = ["Administrador", "Empleado"];
    ViewBag.ViewName = "Gestión de Empleados";
    ViewBag.SelectedView = "Employee";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">@HeaderTitle</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="row">
                    <div class="col-md-6 w-75 m-2">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Employee_Id" />
                            <div class="form-control">
                                <label asp-for="Employee_Name"></label>
                                <input asp-for="Employee_Name" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Employee_Name" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Employee_MiddleName"></label>
                                <input asp-for="Employee_MiddleName" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Employee_MiddleName" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Employee_LastName"></label>
                                <input asp-for="Employee_LastName" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Employee_LastName" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Employee_Password"></label>
                                <input asp-for="Employee_Password" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Employee_Password" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Employee_Email"></label>
                                <input asp-for="Employee_Email" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Employee_Email" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Employee_Phone"></label>
                                <input asp-for="Employee_Phone" class="form-control border border-primary indentFormText" />
                                <span asp-validation-for="Employee_Phone" class="text-danger"></span>
                            </div>
                            <div class="form-control">
                                <label asp-for="Employee_Type"></label>
                                <select asp-for="Employee_Type" asp-items="@(new SelectList(Roles))" class="form-control border border-primary"></select>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Employee_Status" /> @Html.DisplayNameFor(model => model.Employee_Status)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-primary">Volver</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}