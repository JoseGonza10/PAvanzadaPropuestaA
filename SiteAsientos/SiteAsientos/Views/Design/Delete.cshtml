@model SiteAsientos.Models.Design 
@{
    ViewData["Title"] = "Borrar Diseño";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header card-header-danger">
                        <h4 class="card-title">Borrar Diseño</h4>
                        <p class="card-category">¿Está seguro de que desea eliminar este diseño?</p>
                    </div>
                    <div class="card-body">

                        <div class="alert alert-warning">
                            Esta acción no se puede deshacer. Si el diseño posee imágenes, también serán eliminadas permanentemente.
                        </div>

                        <dl class="dl-horizontal">
                            <dt>ID</dt>
                            <dd>@Model.Design_Id</dd>

                            <dt>Descripción</dt>
                            <dd>@Model.Design_Description</dd>

                            <dt>Material</dt>
                            <dd>@(Model.Material?.Material_Name ?? "Sin material")</dd>

                            <dt>Color</dt>
                            <dd>@Model.Design_Color</dd>

                            <dt>Precio</dt>
                            <dd>@Model.Design_Price.ToString("C")</dd>

                            <dt>Impuesto</dt>
                            <dd>@Model.Design_Taxable.ToString("P")</dd>

                            <dt>Estado</dt>
                            <dd>@(Model.Design_Status ? "Activo" : "Inactivo")</dd>
                        </dl>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Design_Id" />
                            <button type="submit" class="btn btn-danger btn-round">Eliminar</button>
                            <a class="btn btn-default btn-round" href="@Url.Action("Index", "Design")">Cancelar</a>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
