@model IEnumerable<SiteAsientos.Models.Design>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Design_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design_Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design_Taxable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design_Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Design_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design_Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design_Taxable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design_Service)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material.Material_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Design_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Design_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Design_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>