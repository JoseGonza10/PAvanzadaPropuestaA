@model IEnumerable<SiteAsientos.Models.Design>
@{
    ViewData["Title"] = "Lista de Materiales";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var HeaderTitle = "Diseños";
    ViewBag.ViewName = "Gestión de Diseños";
    ViewBag.SelectedView = "Design";
}
 
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">@HeaderTitle</h6>
                </div>
            </div>

            <div class="card-body">
                <!-- Botón para Crear un nuevo Diseño -->
                <div class="mb-3">
                    <a href="@Url.Action("Create", "Design")" class="btn btn-success btn-round">Crear Nuevo Diseño</a>
                </div>
                <!-- Formulario de Búsqueda -->
                <form method="get" class="form-inline">
                    <div class="input-group input-group-outline w-50 m-2">
                        <label for="search" class="form-label">Buscar</label>
                        <input type="text" class="form-control" id="search" name="search" value="@ViewBag.CurrentSearch" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-round ml-2">Buscar</button>
                    <a href="@Url.Action("Index", "Design")" class="btn btn-secondary btn-round ml-2">Limpiar</a>
                </form>
                <div class="table-responsive mt-4">
                    <table class="table">
                        <thead class="text-primary">
                            <tr>
                                <th>ID</th>
                                <th>Material</th>
                                <th>Color</th>
                                <th>Precio</th>
                                <th>Impuesto</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Design_Id</td>
                                    <td>@(item.Material?.Material_Name ?? "Sin material")</td>
                                    <td>@item.Design_Color</td>
                                    <td>@item.Design_Price.ToString("C")</td>
                                    <td>@item.Design_Taxable.ToString("P")</td>
                                    <td>
                                        @if (item.Design_Status == true)
                                        {
                                            <span class="badge badge-sm bg-gradient-success">Habilitado</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-sm bg-gradient-secondary">Deshabilitado</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-info btn-sm" href="@Url.Action("Edit", "Design", new { id = item.Design_Id })">
                                            Editar
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Design", new { id = item.Design_Id })">
                                            Borrar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @{
                            int currentPage = ViewBag.CurrentPage ?? 1;
                            int totalPages = ViewBag.TotalPages ?? 1;
                            string currentSearch = ViewBag.CurrentSearch as string ?? "";
                        }

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { search = currentSearch, page = currentPage - 1 })" aria-label="Anterior">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { search = currentSearch, page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { search = currentSearch, page = currentPage + 1 })" aria-label="Siguiente">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>

        </div>
    </div>
</div>


