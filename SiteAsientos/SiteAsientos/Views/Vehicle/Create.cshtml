@model SiteAsientos.Models.VehicleAndFeatures

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Create</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            
            <div class="form-group">
                <label asp-for="Vehicle_Brand" class="control-label">Brand:</label>
                <input asp-for="Vehicle_Brand" class="form-control" style="border:thin;"/>
                <span asp-validation-for="Vehicle_Brand" class="text-danger"></span>

                <select id="brandSelect" asp-for="SelectedBrand" asp-for="" asp-items="@(new SelectList(Model.features.Brands))">
                    <option value="">-- Select Brand --</option>
                </select>
            </div>
            <label for="brandSelect">Brand:</label>
           


            <div class="form-group">
                <div>
                    <label for="modelSelect">Model:</label>
                    <select id="modelSelect" asp-for="SelectedModel" >
                        <option value="">-- Select Model --</option>
                    </select>
                    <span asp-validation-for="Vehicle_Model" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Vehicle_ModelYear" class="control-label"></label>
                <input asp-for="Vehicle_ModelYear" class="form-control" style="border:thin;" />
                <span asp-validation-for="Vehicle_ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#brandSelect').change(function () {
                var selectedBrand = $(this).val();
                if (selectedBrand) {
                    $.ajax({
                        url: '@Url.Action("GetModels", "Cars")',
                        type: 'GET',
                        data: { brand: selectedBrand },
                        success: function (data) {
                            var modelSelect = $('#modelSelect');
                            modelSelect.empty();
                            modelSelect.append('<option value="">-- Select Model --</option>');
                            $.each(data, function (i, model) {
                                modelSelect.append('<option value="' + model + '">' + model + '</option>');
                            });
                        }
                    });
                } else {
                    $('#modelSelect').empty().append('<option value="">-- Select Model --</option>');
                }
            });
        });
    </script>
} 