@model SiteAsientos.Models.Material 
@{
    ViewData["Title"] = "Crear Material";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Crear Material</h4>
                        <p class="card-category">Complete la información del nuevo material</p>
                    </div>
                    <div class="card-body"> 
                        <form asp-action="Create" asp-controller="Material" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="bmd-label-floating">Nombre del Material</label>
                                <input asp-for="Material_Name" class="form-control" />
                                <span asp-validation-for="Material_Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="bmd-label-floating">Proveedor</label>
                                <select asp-for="Material_SupplierId" class="form-control"
                                        asp-items="@(new SelectList((IEnumerable<SiteAsientos.Models.Supplier>)ViewBag.Suppliers, "Supplier_Id", "Supplier_Name"))">
                                    <option value="">-- Seleccione un proveedor --</option>
                                </select>
                                <span asp-validation-for="Material_SupplierId" class="text-danger"></span>
                            </div>

                            <div class="form-check">
                                <label class="form-check-label">
                                    <input asp-for="Material_Status" class="form-check-input" type="checkbox" />
                                    Estado Activo
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                                <span asp-validation-for="Material_Status" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary btn-round">Guardar</button>
                            <a class="btn btn-default btn-round" href="@Url.Action("Index", "Material")">Volver a la lista</a>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}