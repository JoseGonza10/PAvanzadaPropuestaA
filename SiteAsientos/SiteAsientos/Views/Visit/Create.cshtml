@model SiteAsientos.Models.Visit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Create</h1>

<h4>Visit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Visit_Code" class="control-label"></label>
                <input asp-for="Visit_Code" class="form-control" />
                <span asp-validation-for="Visit_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit_OrderId" class="control-label"></label>
                <select asp-for="Visit_OrderId" class ="form-control" asp-items="ViewBag.Visit_OrderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Visit_EmployeeId" class="control-label"></label>
                <select asp-for="Visit_EmployeeId" class ="form-control" asp-items="ViewBag.Visit_EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Visit_Type" class="control-label"></label>
                <input asp-for="Visit_Type" class="form-control" />
                <span asp-validation-for="Visit_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit_Date" class="control-label"></label>
                <input asp-for="Visit_Date" class="form-control" />
                <span asp-validation-for="Visit_Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visit_Status" /> @Html.DisplayNameFor(model => model.Visit_Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
