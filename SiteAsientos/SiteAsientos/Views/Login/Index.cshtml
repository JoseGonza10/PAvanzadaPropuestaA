@model EmployeeLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Employee_Id"></label>
        <input asp-for="Employee_Id" class="form-control" />
        <span asp-validation-for="Employee_Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee_Password"></label>
        <input asp-for="Employee_Password" class="form-control" type="password" />
        <span asp-validation-for="Employee_Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}